<div id="login">
    <div>
       
        <div class="container">
			<div style="color:blue;text-align:center" class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Sign Up</h2>
				</div>
			</div>

			<div class="row justify-content-center">
				<div class="col-md-6 ">
					<div class="login-wrap p-0">
                        <form form action="/create-account" method="POST" class="form-control">
                            <div class="form-group">
                                <label for="username" class="form-label">Name</label>
                                <input type="text" name="username" id="username" class="form-control"required>
                                <label for="email" class="form-label">Email</label>
                                <input type="email" name="email" id="email" class="form-control"required>
                                <label for="password" class="form-label">Password</label>
                                <input type="text" name="password" id="password" class="form-control"required>
                                <label for="cnf_password" class="form-label">Confirm Password</label>
                                <input type="password" id="cnf_password" class="form-control" name="cnf_password" required />
                            </div>
                        
                            <div class="form-group">
                                <button class="form-control btn btn-primary ">Sign Up</button>
                            </div>
                            <div class="text-center">
                                <p>
                                  Already have an accout,
                                  <a href="/">Sign In</a>
                                  instead.
                                </p>
                              </div>
                        </form>
                    
                    </div>
			    </div>
			</div>
		</div>

    </div>
    
</div>